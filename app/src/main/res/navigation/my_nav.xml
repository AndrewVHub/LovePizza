<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.makepizza.presentation.ui.menu.fragments.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_currentProductFragment"
            app:destination="@id/currentProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.makepizza.presentation.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.makepizza.presentation.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/currentProductFragment"
        android:name="com.example.makepizza.presentation.ui.currentproduct.CurrentProductFragment"
        android:label="fragment_current_product"
        tools:layout="@layout/fragment_current_product" />
</navigation>